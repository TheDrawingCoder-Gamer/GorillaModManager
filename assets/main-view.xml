<vbox style="padding: 5px;" width="100%" height="100%">
    <dialogtextfield id="monkePathDialog"/>
    <tabview  width="100%" height="100%"> 
        <vbox text="Mods" width="100%" height="100%">
            <modlist id="modlist"></modlist>  
            <hbox width="100%"> 
                <button text="Install/Update" id="installMods"/>
                <button text="Mod Info" id="modinfo" disabled="true"/>
                <spacer width="100%"/>
                <hbox   >
                    <label text="Overwrite up-to-date mods"/>
                    
                    <checkbox id="overwrite"/>
                </hbox>
            </hbox>  
        </vbox>
        <vbox text="Utilities" width="100%" height="100%">
            <button text="Delete ALL Mods" styleNames="danger" id="deleteMods"/>
            <checkbox text="Dark Mode" id="darkMode" width="15%"/>
        </vbox>
    </tabview>
</vbox>