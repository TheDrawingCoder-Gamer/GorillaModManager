<vbox style="padding: 5px;" width="100%" height="100%">
    <dialogtextfield id="monkePathDialog"/>
    <tabview  width="100%" height="100%"> 
        <vbox text="Mods" width="100%" height="100%">
            <modlist id="modlist"></modlist>  
            <hbox width="100%"> 
                <button text="Install" id="installMods"/>
                <button text="Delete Selected Mods" id="deleteSelectedMods"/>
                <button text="About" id="modinfo"/>
                <spacer width="100%"/>
                <checkbox id="ignoreDeps" text="Ignore Dependencies"/>
                <checkbox id="overwrite" text="Force Reinstall"/>
            </hbox>  
        </vbox>
        <vbox text="Utilities" width="100%" height="100%">
            <button text="Delete ALL Mods" styleNames="danger" id="deleteMods"/>
            <checkbox text="Dark Mode" unless="hxwidgets" id="darkMode"/>
            <checkbox text="Enable Betas" id="enableBetas"/>
        </vbox>
    </tabview>
</vbox>